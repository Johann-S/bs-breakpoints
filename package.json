{
  "name": "bs-breakpoints",
  "version": "1.1.1",
  "description": "A plugin which detect Bootstrap 4 breakpoints and emit when there is a change",
  "author": "Johann-S <johann.servoire@gmail.com>",
  "main": "dist/bs-breakpoints.umd.cjs",
  "module": "dist/bs-breakpoints.js",
  "types": "dist/main.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/bs-breakpoints.js",
      "require": "./dist/bs-breakpoints.umd.cjs"
    }
  },
  "bugs": {
    "url": "https://github.com/Johann-S/bs-breakpoints/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "npm run build",
    "release": "standard-version -a",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bootstrap",
    "bootstrap 5",
    "typescript",
    "vanillajs",
    "react",
    "angular"
  ],
  "homepage": "https://github.com/Johann-S/bs-breakpoints",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johann-S/bs-breakpoints.git"
  },
  "license": "MIT",
  "devDependencies": {
    "bootstrap": "^5.3.3",
    "browserslist": "^4.23.2",
    "browserslist-to-esbuild": "^2.1.1",
    "standard-version": "^9.5.0",
    "terser": "^5.31.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^4.0.0-beta.1"
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm run build",
      "precommit": "git add dist"
    }
  },
  "browserslist": [
    "> 0.5%",
    "not dead"
  ]
}
